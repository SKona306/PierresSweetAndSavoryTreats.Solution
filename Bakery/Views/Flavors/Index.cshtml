@{
  Layout = "_Layout";
}

@using Bakery.Models
@model List<Bakery.Models.Flavor>

<div class="container">
  <h4>Flavor Profiles</h4>
  <p>Here at Pierres Bakery we believe in non-traditional flavor profiles.</p>
  <p>Feel free to add a unique pofile by clicking the "Add Flavor" button below:</p>

  <hr/>

  @if(Model.Count == 0)
  {
    <p>There are no flavor profiles. Please add a Flavor.</p>
  }
  else
  {
    <ul>
      @foreach(Flavor flavor in Model)
        {
          <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId})</li>
        }
    </ul>
  }

  <button>@Html.ActionLink("Add Flavor", "Create")</button>
</div>