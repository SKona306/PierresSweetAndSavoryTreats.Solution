@{
  Layout = "_Layout";
}

@using Bakery.Models
@model List<Bakery.Models.Treat>

<div class="container">
  <h1>Welcome to Pierres Sweet and Savory Bakery</h1>
  <h4>We are not your typical Bakery, we create amazing flavor combinations!</h4>

  <button>@Html.ActionLink("Explore Flavors", "Index", "Flavors")</button>
  <button>@Html.ActionLink("Explore Treats", "Index", "Treats")</button>
  <button>@Html.ActionLink("Create an Account", "Index", "Account")</button>

  <hr/>

<h6>Our Treat's:</h6>
<ul>
  @if(Model.Count == 0)
  {
    <p>No Treats have been added.</p>
  }
  else
  {
    @foreach(Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new {id = treat.TreatId})</li>
    }
}
</ul>

<h6>Our Flavor's:</h6>
<ul>
  @if(ViewBag.Flavors.Count == 0)
  {
    <p>No Flavors have been added.</p>
  }
  else
  {
    @foreach(var flavor in ViewBag.Flavors)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", "Flavors", new { id = flavor.FlavorId})</li>
    }
  }
</ul>
</div>

